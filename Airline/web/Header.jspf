<div id="id01" class="modal">
<div class="container">
	<div class="login-container">
            <div id="output"></div>
            <div class="avatar"></div>
            <div class="form-box">
                <form action="" method="" class="modal-content animate">
                    <input name="user" type="text" placeholder="username" id="id" required="">
                    <input type="password" placeholder="password" id="clave">
                    <button class="btn btn-info btn-block login" type="button" onclick="controller.login();">Login</button>
                </form>
            </div>
        </div>
        
</div>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>    
<script>
    function logout(){
           Proxy.userLogout(
                function(){
                    document.location="/Airline/index.jsp";
               });
    
}
</script>






